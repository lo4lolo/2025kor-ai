        // Mobile Menu Toggle
        const menuToggle = document.getElementById('menu-toggle');
        const navMenu = document.getElementById('nav-menu');

        menuToggle.addEventListener('click', () => {
            const isExpanded = navMenu.classList.toggle('active');
            menuToggle.setAttribute('aria-expanded', isExpanded);
            if (isExpanded) {
                menuToggle.textContent = '✕'; // Change to 'X' icon
            } else {
                menuToggle.textContent = '☰'; // Change back to hamburger
            }
        });

        navMenu.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
                if (navMenu.classList.contains('active')) {
                    navMenu.classList.remove('active');
                    menuToggle.setAttribute('aria-expanded', 'false');
                    menuToggle.textContent = '☰';
                }
            });
        });

        // Charts
        document.addEventListener('DOMContentLoaded', () => {
            // Chart for 표 1: 대한민국 초등학생 수 변화 및 출생아 수 비교
            const populationCtx = document.getElementById('populationChangeChart');
            if (populationCtx) {
                new Chart(populationCtx, {
                    type: 'bar',
                    data: {
                        labels: ['2012년 출생아 (현 초6)', '2024년 예상 출생아', '초등 학령인구 (2020년)', '초등 학령인구 (2035년 전망)'],
                        datasets: [{
                            label: '학생 수 (명)',
                            data: [484550, 238300, 2720000, 1370000],
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.7)',
                                'rgba(54, 162, 235, 0.7)',
                                'rgba(255, 206, 86, 0.7)',
                                'rgba(75, 192, 192, 0.7)'
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) {
                                        return value.toLocaleString() + '명';
                                    }
                                }
                            }
                        },
                        plugins: {
                            title: {
                                display: true,
                                text: '대한민국 초등학생 수 변화 및 전망 (표 1 기반)',
                                font: { size: 16, weight: 'bold' },
                                padding: { top: 10, bottom: 20 }
                            },
                            legend: {
                                display: false
                            }
                        }
                    }
                });
            }

            // Chart for 표 2: 대한민국 AI 기술 수준 (미국=100)
            const aiTechLevelCtx = document.getElementById('aiTechLevelChart');
            if (aiTechLevelCtx) {
                new Chart(aiTechLevelCtx, {
                    type: 'bar',
                    data: {
                        labels: ['미국', '중국', '유럽', '한국', '일본'],
                        datasets: [{
                            label: 'AI 기술 수준 (미국 = 100)',
                            data: [100, 93.3, 92.9, 89.1, 86.9],
                            backgroundColor: [
                                'rgba(75, 192, 192, 0.7)',
                                'rgba(255, 99, 132, 0.7)',
                                'rgba(54, 162, 235, 0.7)',
                                'rgba(255, 206, 86, 0.7)',
                                'rgba(153, 102, 255, 0.7)'
                            ],
                            borderColor: [
                                'rgba(75, 192, 192, 1)',
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(153, 102, 255, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        indexAxis: 'y', // Horizontal bar chart
                        scales: {
                            x: {
                                beginAtZero: true
                            }
                        },
                        plugins: {
                            title: {
                                display: true,
                                text: '주요국 AI 기술 수준 (2021년, 미국=100) (표 2 기반)',
                                font: { size: 16, weight: 'bold' },
                                padding: { top: 10, bottom: 20 }
                            },
                             legend: {
                                display: false
                            }
                        }
                    }
                });
            }
            
            // Chart for 표 2: 글로벌 AI 지수 - 한국 세부 항목 (Radar Chart)
            const globalAiIndexKoreaCtx = document.getElementById('globalAiIndexKoreaChart');
            if (globalAiIndexKoreaCtx) {
                 const originalRanks = [3, 12, 11, 18]; // 개발 능력, 인재, 운영 환경, 상용화 순위
                 const maxRankForRadar = 20; // 차트의 최대값 (순위가 낮을수록 좋으므로, 변환된 점수는 높을수록 좋음)
                 const invertedDataForRadar = originalRanks.map(rank => maxRankForRadar - rank); // [17, 8, 9, 2]

                 new Chart(globalAiIndexKoreaCtx, {
                    type: 'radar',
                    data: {
                        labels: ['개발 능력 (3위)', '인재 (12위)', '운영 환경 (11위)', '상용화 (18위)'],
                        datasets: [{
                            label: 'AI 분야별 상대적 강점 (점수가 높을수록 우수, 괄호 안은 실제 순위)',
                            data: invertedDataForRadar, 
                            fill: true,
                            backgroundColor: 'rgba(255, 99, 132, 0.2)',
                            borderColor: 'rgb(255, 99, 132)',
                            pointBackgroundColor: 'rgb(255, 99, 132)',
                            pointBorderColor: '#fff',
                            pointHoverBackgroundColor: '#fff',
                            pointHoverBorderColor: 'rgb(255, 99, 132)'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        scales: {
                            r: {
                                beginAtZero: true,
                                suggestedMax: maxRankForRadar, 
                                ticks: {
                                   stepSize: 5,
                                   callback: function(value) { 
                                       return value; // 변환된 점수 표시 (0 ~ maxRankForRadar)
                                   }
                                },
                                pointLabels: {
                                    font: {
                                        size: 12
                                    }
                                }
                            }
                        },
                        plugins: {
                            title: {
                                display: true,
                                text: '글로벌 AI 지수 - 한국 세부 항목별 평가 (2023년) (표 2 기반)',
                                font: { size: 16, weight: 'bold' },
                                padding: { top: 10, bottom: 20 }
                            },
                            legend: {
                                display: true,
                                position: 'bottom',
                                labels: {
                                    font: {
                                        size: 11
                                    }
                                }
                            }
                        }
                    }
                });
            }


            // Chart for 표 3: 대한민국 고등교육 이수율
            const higherEducationCtx = document.getElementById('higherEducationChart');
            if (higherEducationCtx) {
                new Chart(higherEducationCtx, {
                    type: 'bar',
                    data: {
                        labels: ['한국', 'OECD 평균'],
                        datasets: [{
                            label: '청년층(25-34세) 고등교육 이수율 (%)',
                            data: [69.7, 47.4],
                            backgroundColor: [
                                'rgba(75, 192, 192, 0.7)',
                                'rgba(201, 203, 207, 0.7)'
                            ],
                            borderColor: [
                                'rgba(75, 192, 192, 1)',
                                'rgba(201, 203, 207, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        scales: {
                            y: {
                                beginAtZero: true,
                                max: 100,
                                ticks: {
                                    callback: function(value) {
                                        return value + '%';
                                    }
                                }
                            }
                        },
                        plugins: {
                            title: {
                                display: true,
                                text: '청년층 고등교육 이수율 (2022년) (표 3 기반)',
                                font: { size: 16, weight: 'bold' },
                                padding: { top: 10, bottom: 20 }
                            },
                             legend: {
                                display: false
                            }
                        }
                    }
                });
            }

            // Chart for 표 4: 대한민국 AI 서비스 사용 현황
            const aiServiceExperienceCtx = document.getElementById('aiServiceExperienceChart');
            if (aiServiceExperienceCtx) {
                new Chart(aiServiceExperienceCtx, {
                    type: 'bar',
                    data: {
                        labels: ['전체', '6-19세', '20대', '30대'],
                        datasets: [{
                            label: 'AI 서비스 경험률 (%)',
                            data: [50.0, 66.0, 61.0, 65.8], // Using 50.0 for "50% 이상"
                            backgroundColor: [
                                'rgba(153, 102, 255, 0.7)',
                                'rgba(255, 159, 64, 0.7)',
                                'rgba(255, 99, 132, 0.7)',
                                'rgba(54, 162, 235, 0.7)'
                            ],
                            borderColor: [
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)',
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        scales: {
                            y: {
                                beginAtZero: true,
                                max: 100,
                                ticks: {
                                    callback: function(value) {
                                        return value + '%';
                                    }
                                }
                            }
                        },
                        plugins: {
                            title: {
                                display: true,
                                text: '대한민국 AI 서비스 경험률 (2023년) (표 4 기반)',
                                font: { size: 16, weight: 'bold' },
                                padding: { top: 10, bottom: 20 }
                            },
                             legend: {
                                display: false
                            }
                        }
                    }
                });
            }
        });
    </script>
